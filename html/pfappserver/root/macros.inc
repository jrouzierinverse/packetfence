[% MACRO l(text, args) BLOCK;c.localize(text, args);END -%]

[% MACRO i18n(text, args) BLOCK;c.localize(text, args);END -%]

[% MACRO i18n_format(text, args) BLOCK;c.localize(text, args);END -%]

[%- MACRO pagination_path(section, params)  BLOCK -%]
    [%- tags =  [ 'page_num'  'by'  'direction'  'per_page'  'filter'] -%]
    [%- "${section}/" -%]
    [%- IF params.page_num -%]
        [%- path_part = params.page_num | uri -%]
        [%- "page_num/${path_part}/" -%]
    [%- END  -%]
    [%- IF params.by -%]
        [%- path_part = params.by | uri -%]
        [%- "by/${path_part}/" -%]
    [%- END  -%]
    [%- IF params.direction -%]
        [%- path_part = params.direction | uri -%]
        [%- "direction/${path_part}/" -%]
    [%- END  -%]
    [%- IF params.filter -%]
        [%- path_part = params.filter | uri -%]
        [%- "filter/${path_part}/" -%]
    [%- END  -%]
[%- END -%]
